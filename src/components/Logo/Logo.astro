---
import { Image } from 'astro:assets';
import styles from './styles.module.css';

import LogoImage from '@/assets/logo_dark_version.svg';
const { mobileAligment } = Astro.props;
---

<a
  class={styles.logo}
  data-mobile-alignment={mobileAligment}
  href="/"
>
  <Image
    alt="Logo Barcelona Nocturna"
    src={LogoImage}
    width={180}
  />
</a>
