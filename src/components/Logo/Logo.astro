---
import { Image } from 'astro:assets'

import LogoImage from '@/assets/logo.png'
const { mobileAligment } = Astro.props
---

<a
  class="logo"
  data-mobile-alignment={mobileAligment}
  href="/"
>
  <Image src={LogoImage} alt="Logo Barcelona Nocturna" width={180} quality='max' />
</a>

<style>
  .logo {
    display: block;
  }

  .logo img {
    display: block;
  }
</style>
