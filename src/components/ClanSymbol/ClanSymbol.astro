---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import brujah from '@/assets/clans_symbols/brujah-symbol.svg';

interface Props {
  alt: string;
  id: string;
  size: number;
}

const { alt, id, size } = Astro.props;

const clanSymbols = await getCollection('clans');
const clanSymbol = clanSymbols.find((clan) => clan.slug === id);
---

<Image src={clanSymbol!.data.symbol} alt={alt} width={size} height={size} />
