---
import { Image } from 'astro:assets';
import styles from './styles.module.css';

interface Props {
  alt: string;
  invertedColor?: boolean;
  size: number;
  symbol: { 
    src: string,
    width: number,
    height: number,
    format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif"
  };
}

const { alt, invertedColor, size, symbol } = Astro.props;

const classes = invertedColor ? [styles.invertedColor] : [];
---

<Image src={symbol} alt={alt} width={size} height={size} class:list={classes} />
