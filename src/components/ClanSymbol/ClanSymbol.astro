---
import { Image } from 'astro:assets';

interface Props {
  alt: string;
  invertedColor?: boolean;
  size: number;
  symbol: { 
    src: string,
    width: number,
    height: number,
    format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif"
  };
}

const { alt, invertedColor, size, symbol } = Astro.props;

const classes = invertedColor ? ['inverted-color'] : [];
---

<Image src={symbol} alt={alt} width={size} height={size} class:list={classes} />

<style>
  .inverted-color {
    filter: brightness(0) invert(1);
  }
</style>
