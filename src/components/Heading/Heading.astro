---
import styles from './styles.module.css';

const headingOptions = {
  h1: 'xxl',
  h2: 'xl',
  h3: 'lg',
  h4: 'md',
  h5: 'sm',
  h6: 'xs',
};

interface Props {
  align?: 'left' | 'center' | 'right';
  size: keyof typeof headingOptions;
  tagName: keyof typeof headingOptions;
}

const { align = 'left', size, tagName } = Astro.props;
const Tag = tagName;
---

<Tag class:list={[styles.heading, styles[headingOptions[size]], styles[align]]}>
  <slot />
</Tag>
