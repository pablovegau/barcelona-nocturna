---
const headingOptions = {
  h1: 'xxl',
  h2: 'xl',
  h3: 'lg',
  h4: 'md',
  h5: 'sm',
  h6: 'xs',
};

interface Props {
  align?: 'left' | 'center' | 'right';
  size: keyof typeof headingOptions;
  tagName: keyof typeof headingOptions;
  transitionName?: string;
}

const { align = 'left', size, tagName, transitionName } = Astro.props;
const Tag = tagName;
---

<Tag class:list={["heading", headingOptions[size], align]} transition:name={transitionName}>
  <slot />
</Tag>

<style>
  .heading {}

  .xxl {
    font-size: var(--bn-h1-min-font-size);
    font-weight: var(--bn-h1-font-weight);

    @media (min-width: 40rem) {
      font-size: var(--bn-h1-max-font-size);
    }
  }

  .xl {
    font-size: var(--bn-h2-min-font-size);
    font-weight: var(--bn-h2-font-weight);

    @media (min-width: 40rem) {
      font-size: var(--bn-h2-max-font-size);
    }
  }

  .lg {
    font-size: var(--bn-h3-min-font-size);
    font-weight: var(--bn-h3-font-weight);

    @media (min-width: 40rem) {
      font-size: var(--bn-h3-max-font-size);
    }
  }

  .left {
    text-align: left;
  }

  .center {
    text-align: center;
  }

  .right {
    text-align: right;
  }

  /* .md {
    font-size: 1.5rem;
  }

  .sm {
    font-size: 1.25rem;
  }

  .xs {
    font-size: 1rem;
  } */
</style>
