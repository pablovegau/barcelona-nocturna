---
import JimNightshade from '@/assets/fonts/JimNightshade.woff2';
import UbuntuRegular from '@/assets/fonts/ubuntu-regular.woff2';
import { BLOG_DESCRIPTION, BLOG_TITLE } from '@/constants';

interface Props {
  pageTitle?: string;
  description?: string;
}

const { pageTitle = BLOG_TITLE, description = BLOG_DESCRIPTION } = Astro.props;
---

<head>
  <!-- Set theme before paint to avoid flickering -->
  <script is:inline>
    let theme = localStorage.getItem('theme');
    if (!theme) {
      theme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';  
    }

    localStorage.setItem('theme', theme);
    document.documentElement.setAttribute('data-theme', theme);
  </script>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="description" content={description} />
  <title>{pageTitle}</title>

  <link rel="preload" href={JimNightshade} as="font" type="font/woff2" crossorigin />
  <link rel="preload" href={UbuntuRegular} as="font" type="font/woff2" crossorigin />

  <link rel="preconnect" href="https://embed.kumu.io" crossorigin />
  <link rel="dns-prefetch" href="https://embed.kumu.io" />
  <link rel="dns-prefetch" href="https://www.paradoxinteractive.com" />
  <link rel="dns-prefetch" href="https://www.worldofdarkness.com" />
</head>
