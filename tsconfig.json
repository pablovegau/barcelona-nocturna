{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@comp/*": ["src/components/*"],
			"@react/*": ["src/components/react/*"],
			"@domain/*": ["src/domain/*"],
			"@lib/*": ["src/lib/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"strictNullChecks": true
	},
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"]
}
